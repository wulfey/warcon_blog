<p id="notice"><%= notice %></p>

<h3 align="center"> <strong>Title:</strong>   <%= @article.title %>   </h2>

<div class="col-xs-8 col-xs-offset-2">
    
    <% if @article.user %>
    <ul class="listing">
      <div class="row center">
        <div class="well col-md-4 col-md-offset-4">
            <li> Created by: </li>
            <li> <%= link_to gravatar_for(@article.user), user_path(@article.user) %> </li>
            <li class="article-title"> <%= link_to @article.user.username, user_path(@article.user) %> </li>
            <li><small> <%= pluralize(@article.user.articles.count, "artcile") if @article.user.articles %> </small></li>
            
        </div>
      </div>
    </ul>
    <% end %>
  
  <h4 class="center description"> <strong>Description: </strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  
  <div class="article-actions">
    <%= link_to 'Edit article', edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
    <%= link_to 'Delete article', article_path(@article), method: :delete, 
                                  data: { confirm: "Sure about delete?"}, 
                                  class: "btn btn-xs btn-danger" %>
    <%= link_to 'View articles', articles_path, class: "btn btn-xs btn-success"  %>
  </div>
</div>

<p></p>





